@model IEnumerable<TicketsApp.Models.User>

@{
    ViewData["Title"] = "Assign Roles";
    Layout = "_AdministratorLayout";
}

<h1>Assign Roles</h1>

<div class="container mt-4">
    <div class="mb-3 text-right">
        <button onclick="location.href='@Url.Action("Create")'" class="btn btn-primary">Create New</button>
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-custom">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Role)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                        <td>
                            <button onclick="location.href='@Url.Action("Edit", new { id = item.UserId })'" class="btn btn-secondary btn-sm">Edit</button>
                            <button onclick="location.href='@Url.Action("Details", new { id = item.UserId })'" class="btn btn-info btn-sm">Details</button>
                            <button onclick="location.href='@Url.Action("Delete", new { id = item.UserId })'" class="btn btn-danger btn-sm">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .thead-custom th {
        background-color: #0FC2C0;
        color: #023535;
    }

    .btn-primary {
        background-color: #0CABA8;
        border-color: #008F8C;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #008F8C;
            border-color: #007B8A;
        }

    .btn-secondary, .btn-info, .btn-danger {
        color: #ffffff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-secondary:hover, .btn-info:hover, .btn-danger:hover {
            opacity: 0.85;
        }

    .container {
        max-width: 1200px;
    }

    .table-responsive {
        margin-bottom: 40px;
    }
</style>
