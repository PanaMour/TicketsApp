@model TicketsApp.Models.Event

@{
    ViewData["Title"] = "Delete Event";
    Layout = "_OrganizerLayout";
}

<h1>Delete Event</h1>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header card-header-custom">
            <h4 class="mb-0">Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this event?</h3>
            <dl class="row">
                <dt class="col-sm-4">Event Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EventName)</dd>

                <dt class="col-sm-4">Description:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-4">Event Date:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EventDate)</dd>

                <dt class="col-sm-4">Event Time:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EventTime)</dd>

                <dt class="col-sm-4">Venue:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Venue.VenueName)</dd>
            </dl>
            <form asp-action="Delete" method="post" class="text-center">
                <input type="hidden" asp-for="EventId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index2" class="btn btn-link">Cancel</a>
            </form>
        </div>
    </div>
</div>

<style>
    .card-header-custom {
        background-color: #0FC2C0;
        color: #023535;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-link {
        color: #0CABA8;
    }

        .btn-link:hover {
            color: #008F8C;
        }

    .container {
        max-width: 800px;
    }
</style>
