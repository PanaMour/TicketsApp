@model TicketsApp.Models.Event

@{
    ViewData["Title"] = "Create Event";
    Layout = "_OrganizerLayout";
}

<h1>Create Event</h1>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header card-header-custom">
            <h4 class="mb-0">New Event Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EventName" class="control-label">Event Name</label>
                    <input asp-for="EventName" class="form-control" placeholder="Enter event name" />
                    <span asp-validation-for="EventName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Describe the event" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VenueId" class="control-label">Venue</label>
                    <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId">
                        <option value="">Select a venue</option>
                    </select>
                    <span asp-validation-for="VenueId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EventDate" class="control-label">Event Date</label>
                    <input asp-for="EventDate" type="date" class="form-control" />
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EventTime" class="control-label">Event Time</label>
                    <input asp-for="EventTime" type="time" class="form-control" />
                    <span asp-validation-for="EventTime" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index2" class="btn btn-link">Back to List</a>
        </div>
    </div>
</div>

<style>
    .card-header-custom {
        background-color: #0FC2C0;
        color: #023535;
    }

    .btn-primary {
        background-color: #0CABA8;
        border-color: #008F8C;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #008F8C;
            border-color: #007B8A;
        }

    .btn-link {
        color: #0CABA8;
    }

        .btn-link:hover {
            color: #008F8C;
        }

    .container {
        max-width: 600px;
    }

    input[type="date"], input[type="time"] {
        max-width: 250px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
