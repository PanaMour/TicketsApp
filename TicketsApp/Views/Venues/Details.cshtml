@model TicketsApp.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<h1>Venue Details</h1>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header card-header-custom">
            <h4 class="mb-0">Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 col-md-3">Venue Name</dt>
                <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.VenueName)</dd>
                <dt class="col-sm-4 col-md-3">Location</dt>
                <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Location)</dd>
                <dt class="col-sm-4 col-md-3">Capacity</dt>
                <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Capacity)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.VenueId" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-link">Back to List</a>
        </div>
    </div>
</div>

<style>
    .card-header-custom {
        background-color: #0FC2C0;
        color: #023535;
    }

    .btn-primary {
        background-color: #0CABA8;
        border-color: #008F8C;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #008F8C;
            border-color: #007B8A;
        }

    .btn-link {
        color: #0CABA8;
    }

        .btn-link:hover {
            color: #008F8C;
        }

    .container {
        max-width: 800px; /* Adjust based on your layout needs */
    }
</style>
