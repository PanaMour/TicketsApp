@model TicketsApp.Models.Venue

@{
    ViewData["Title"] = "Edit Venue";
}

<h1>Edit Venue</h1>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header card-header-custom">
            <h4 class="mb-0">Venue Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VenueId" />
                <div class="form-group">
                    <label asp-for="VenueName" class="control-label">Venue Name</label>
                    <input asp-for="VenueName" class="form-control" />
                    <span asp-validation-for="VenueName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label">Location</label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Capacity" class="control-label">Capacity</label>
                    <input asp-for="Capacity" type="number" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-link">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card-header-custom {
        background-color: #0FC2C0;
        color: #023535;
    }

    .btn-primary {
        background-color: #0CABA8;
        border-color: #008F8C;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #008F8C;
            border-color: #007B8A;
        }

    .btn-link {
        color: #0CABA8;
    }

        .btn-link:hover {
            color: #008F8C;
        }

    .container {
        max-width: 600px;
    }
</style>
