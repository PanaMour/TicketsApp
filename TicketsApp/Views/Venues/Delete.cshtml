@model TicketsApp.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h1>Delete Venue</h1>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header card-header-custom">
            <h4 class="mb-0">Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this venue?</h3>
            <dl class="row">
                <dt class="col-sm-4">Venue Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.VenueName)</dd>
                <dt class="col-sm-4">Location:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Location)</dd>
                <dt class="col-sm-4">Capacity:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Capacity)</dd>
            </dl>
            <form asp-action="Delete" method="post" class="text-center">
                <input type="hidden" asp-for="VenueId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-link">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card-header-custom {
        background-color: #0FC2C0;
        color: #023535;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-link {
        color: #0CABA8;
    }

        .btn-link:hover {
            color: #008F8C;
        }

    .container {
        max-width: 600px;
    }
</style>
